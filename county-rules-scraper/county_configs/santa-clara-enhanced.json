    },
    {
      "name": "Department 7 Standing Orders",
      "url_pattern": "department.*7.*order",
      "department": "7",
      "judge_specific": true
    }
  ],

  "changeDetection": {
    "enabled": true,
    "track_revision_dates": true,
    "compare_content": true,
    "notification_threshold": "any_change",
    "critical_patterns": [
      "PLAINTIFF MUST SERVE",
      "MANDATORY",
      "Revised \\d{2}/\\d{2}/\\d{4}",
      "Standing Order",
      "Department \\d+",
      "Judge [A-Z][a-z]+ [A-Z][a-z]+"
    ]
  },

